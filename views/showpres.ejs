<body>
    <nav class="navbar navbar-light" style="background-color: #117099;">

        <button style="border:none;" class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <div class="drop">
                <h5 name="drname" style="color:white;"><%= currentUser.username %></h5>
            </div>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/home">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/userinfo">Profile</a>
                </li>
                <li>
                    <a class="nav-link" href="/logout">Logout</a>
                </li>

            </ul>
        </div>

        </div>
    </nav>
    <div class="container">
        <h2 style="margin-top:1em;">Prescription</h2>
        <div style="margin-top:1em;" class="form-group">
            <label for="FormName">Date</label>
            <input type="text" class="form-control" id="FormName" name="date" placeholder=<%=pres.date %> readonly>
        </div>

        <div style="margin-top:1em;" class="form-group">
            <label for="FormName">Patient Description</label>
            <textarea class="form-control" rows="3" id="FormName" name="patientdesc" readonly><%= pres.patientdesc %></textarea>
        </div>

        <div style="margin-top:1em;" class="form-group">
            <label for="FormName">Doctor Description</label>
            <textarea class="form-control" rows="3" id="FormName" name="doctordesc" readonly><%= pres.doctordesc %></textarea>
        </div>
