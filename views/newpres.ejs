    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <link href='https://fonts.googleapis.com/css?family=Poppins' rel='stylesheet'>
    <script src="./js/signup_form2.js"></script>
    <link rel="stylesheet" href="./css/add_pres.css">
</head>

<body>
    <nav class="navbar navbar-light" style="background-color: #117099;">

        <button style="border:none;" class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <div class="drop">
                <h5 name="drname" style="color:white;"><%= currentUser.username %></h5>
            </div>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/home">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/userinfo">Profile</a>
                </li>
                <li>
                    <a class="nav-link" href="/logout">Logout</a>
                </li>
            </ul>
        </div>

        </div>
    </nav>
    <div class="container">
        <form action="/prescription/<%= diseaseId %>/new" method="post">

            <div style="margin-top:1em;" class="form-group">
                <label for="FormName">Date</label>
                <input type="date" name="date" id="FormName" class="form-control">
            </div>

            <div style="margin-top:1em;" class="form-group">
                <label for="FormName">Patient Description</label>
                <textarea class="form-control" rows="3" id="FormName" name="patientdesc" placeholder="Patient Description"></textarea>
            </div>

            <div style="margin-top:1em;" class="form-group">
                <label for="FormName">Doctor Description</label>
                <textarea class="form-control" rows="3" id="FormName" name="doctordesc" placeholder="Doctor Description"></textarea>
            </div>
            <!-- <div class="form-check">

                <input class="form-check-input" type="checkbox" name="testreport" id="flexCheckDefault">
                <label class="form-check-label" for="flexCheckDefault">
                    Test Reports
                  </label>
            </div> -->
            <div style="margin-top:1em;" class="form-group">
                <label for="FormName">Medicines</label>
                <textarea class="form-control" rows="3" id="FormName" name="medicines" placeholder="Add medicines"></textarea>
            </div>
            <button id="adbt" class="btn btn-primary" type="submit">Add Prescription</button>
        </form>
    </div>
</body>

</html>